pipeline {
    agent any
        
    tools {
    maven 'maven' 
  }

    stages {
       stage("Git Checkout"){
          steps{
           git 'https://github.com/chenna6/amazon.git'
           }
          }
          
           stage("build"){
          steps{
           sh "mvn -f amazonweb/pom.xml clean package"
           }
          }
        
        stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcatid', path: '', url: 'http://3.109.212.200:8080/')], contextPath: '', onFailure: false, war: 'amazonweb/target/*.war' 
        }
      }
    }
    }
}
