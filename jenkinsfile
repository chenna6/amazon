pipeline {
    agent any
        
    tools {
    maven 'maven' 
  }

    stages {
       stage("Git Checkout"){
          steps{
           git 'https://github.com/chenna6/amazon.git'
           }
          }
          
           stage("build"){
          steps{
           sh "mvn -f amazonweb/pom.xml clean package"
           }
          }
        
        stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://43.204.107.222:8080/')], contextPath: '', onFailure: false, war: 'amazon/target/*.war' 
        }
      }
    }
    }
}
